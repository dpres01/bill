{% extends 'base.html.twig' %}

{% block title %} Facturier {% endblock %}

{% block body %}
<div>
    <h2> Liste de referentiels des factures </h2>
    <table class="table">
        <tr>
            <th>Locataire</th>
            <th>Bailleur</th>
            <th>Montant sans charges</th>
            <th>Montant de charges</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        {% for bill in bills %}
        <tr>
            <td>{{ bill.renter }}</td>
            <td>{{ bill.owner }}</td>
            <td>{{ bill.amount }}</td>
            <td>{{ bill.chargesAmount }}</td>
            <td>{{ bill.total }}</td>
            <td> 
                <a href="{{ path('app_bill_edit',{id: bill.id}) }}"> <button class="btn btn-outline-dark"><i class="bi bi-pencil-square"></i> Edit</button></a>
                <a href="{{ path('app_bill_remove',{id: bill.id}) }}"><button class="btn btn-outline-danger"><i class="bi bi-trash3"></i> Supprimer</button></a>
            </td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
