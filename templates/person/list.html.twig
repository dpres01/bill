{% extends 'base.html.twig' %}

{% block title %} Facturier {% endblock %}

{% block body %}
<div>
    <h2> Liste des occupants  </h2>
    <table class="table">
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Date d'entrée</th>
            <th>Actions</th>
        </tr>
        {% for person in persons %}
        <tr>
            <td>{{ person.firstName }}</td>
            <td>{{ person.lastName }}</td>
            <td>{{ person.fromDate|date('d/m/Y') }}</td>
            <td> 
                <a href="{{ path('app_person_edit',{id: person.id}) }}"> <button class="btn btn-outline-dark"><i class="bi bi-pencil-square"></i> Edit</button></a>
                <a href="{{ path('app_person_remove',{id: person.id}) }}"><button class="btn btn-outline-danger"><i class="bi bi-trash3"></i> Supprimer</button></a>
            </td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
